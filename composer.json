    },
    "require-dev": {
        "puper/httpkernel-adapter": "dev-master",
        "mockery/mockery": "^0.9.4",
        "phpunit/phpunit": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "PHPPM\\": ""
